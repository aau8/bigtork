{% macro breadcrumbs( pages ) %}
	<div class="breadcrumbs">
		<div class="breadcrumbs__container">
			<ul class="breadcrumbs__list">
				{% for page in pages %}
					{% if loop.index === 1 %}
						<li class="breadcrumbs__item"><a class="link" href="#">{{ page }}</a></li>
					{% else %}
						<li class="breadcrumbs__item">{{ page }}</li>
					{% endif %}
				{% endfor %}
			</ul>
		</div>
	</div>
{% endmacro %}